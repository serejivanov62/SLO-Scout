{
  "dashboard": {
    "title": "SLO-Scout Self-Observability Dashboard",
    "description": "Monitoring dashboard for SLO-Scout's own performance and SLOs (FR-026)",
    "tags": [
      "slo-scout",
      "self-observability",
      "slo",
      "platform"
    ],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h"
      ]
    },
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "query",
          "datasource": "${DS_PROMETHEUS}",
          "query": "label_values(slo_scout_system_info, environment)",
          "current": {
            "value": "production",
            "text": "production"
          },
          "label": "Environment",
          "multi": false,
          "includeAll": false
        },
        {
          "name": "service",
          "type": "query",
          "datasource": "${DS_PROMETHEUS}",
          "query": "label_values(slo_scout_ingest_events_total, service)",
          "current": {
            "value": "all",
            "text": "All"
          },
          "label": "Service",
          "multi": false,
          "includeAll": true
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "SLO Status Overview",
        "type": "stat",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 24,
          "h": 4
        },
        "targets": [
          {
            "expr": "slo_scout:ingest_freshness:slo_status",
            "legendFormat": "Ingest Freshness (99% < 60s)",
            "refId": "A",
            "datasource": {
              "uid": "${DS_PROMETHEUS}"
            }
          },
          {
            "expr": "slo_scout:vector_query:slo_status",
            "legendFormat": "Query Latency (95% < 2s)",
            "refId": "B",
            "datasource": {
              "uid": "${DS_PROMETHEUS}"
            }
          },
          {
            "expr": "slo_scout:analysis:slo_status",
            "legendFormat": "Summarization (95% < 5m)",
            "refId": "C",
            "datasource": {
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value",
          "orientation": "auto",
          "textMode": "value_and_name"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {
                "type": "value",
                "options": {
                  "1": {
                    "text": "✓ Meeting SLO",
                    "color": "green"
                  },
                  "0": {
                    "text": "✗ Breaching SLO",
                    "color": "red"
                  }
                }
              }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 1,
                  "color": "green"
                }
              ]
            }
          }
        },
        "datasource": {
          "uid": "${DS_PROMETHEUS}"
        }
      },
      {
        "id": 2,
        "title": "Ingest Lag (P99) - SLO Target: < 60s",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 4,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "slo_scout:ingest_lag:p99{service=~\"$service\"}",
            "legendFormat": "{{service}} - {{telemetry_type}} P99",
            "refId": "A",
            "datasource": {
              "uid": "${DS_PROMETHEUS}"
            }
          },
          {
            "expr": "60",
            "legendFormat": "SLO Threshold (60s)",
            "refId": "B",
            "datasource": {
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "options": {
          "tooltip": {
            "mode": "multi",
            "sort": "none"
          },
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "calcs": [
              "mean",
              "max",
              "last"
            ]
          }
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "custom": {
              "axisPlacement": "auto",
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10,
              "showPoints": "never"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "SLO Threshold*"
              },
              "properties": [
                {
                  "id": "custom.lineStyle",
                  "value": {
                    "fill": "dash"
                  }
                },
                {
                  "id": "color",
                  "value": {
                    "mode": "fixed",
                    "fixedColor": "red"
                  }
                }
              ]
            }
          ]
        },
        "datasource": {
          "uid": "${DS_PROMETHEUS}"
        }
      },
      {
        "id": 3,
        "title": "Ingest Freshness Error Budget",
        "type": "gauge",
        "gridPos": {
          "x": 12,
          "y": 4,
          "w": 12,
          "h": 8
