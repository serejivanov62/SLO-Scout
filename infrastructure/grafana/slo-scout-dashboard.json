        "targets": [
          {
            "expr": "slo_scout:ingest_freshness:error_budget_remaining{service=~\"$service\"}",
            "legendFormat": "{{service}}",
            "refId": "A",
            "datasource": {
              "uid": "${DS_PROMETHEUS}"
            }
          }
        ],
        "options": {
          "orientation": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": -100,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": -100,
                  "color": "dark-red"
                },
                {
                  "value": -50,
                  "color": "red"
                },
                {
                  "value": 0,
                  "color": "yellow"
                },
                {
                  "value": 50,
                  "color": "green"
